<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZuriChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color</item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/navigation_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZuriChat.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZuriChat.Settings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <item name="colorAccent">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:textColorSecondary">@color/message_content</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">#E5E5E5</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.ZuriChat.TextChatBackupTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Theme.ZuriChat.TextChatBackupDesc">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>

    </style>

    <style name="MessageItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/message_content</item>
    </style>
    <style name="MessageItem.Time">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textColor">@color/message_sent_time</item>
    </style>
    <style name="MessageItem.Checkmark">
        <item name="tint">@color/message_checkmark_unread</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">12sp</item>
    </style>

    <style name="TabTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextColor">@color/divider_white</item>
        <item name="tabTextAppearance">@style/TabCustomTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.ZuriChat.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#024E35</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">#FFFFFF</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextAppearance">@style/App.ToolbarMenuItem</item>
    </style>

    <style name="Theme.ZuriChat.LogIN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#024E35</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">#FFFFFF</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="customDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/background_color</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/background_color</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="App.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/top_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
    <style name="App.ToolbarTitleTex" parent="App.ToolbarStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="App.ToolbarSubtitleTex" parent="App.ToolbarStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="App.ToolbarMenuItem" parent="App.ToolbarSubtitleTex">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>